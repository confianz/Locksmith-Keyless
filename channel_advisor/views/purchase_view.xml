<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ca_purchase_form_view" model="ir.ui.view">
            <field name="name">CA Purchase Form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">


                <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="vendor_sku" />
                </xpath>


            </field>
        </record>
         <record id="ca_purchase_order_line_form2" model="ir.ui.view">
            <field name="name">ca.purchase.order.line.form</field>
            <field name="model">purchase.order.line</field>
              <field name="inherit_id" ref="purchase.purchase_order_line_form2" />
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="vendor_sku" />
                </xpath>

            </field>
        </record>



    </data>

</odoo>
