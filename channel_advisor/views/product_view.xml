<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
            <record id="product_customer_sku_view" model="ir.ui.view">
            <field name="name">Product Template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <page  name='general_information' position="inside">

                    <separator string="Customer Reference"/>
                    <field name="product_customer_sku" invisible="1"/>
                    <field name ='customer_product_value_ids'>
                        <tree editable="bottom">
                            <field name="product_id" invisible="1"/>
                            <field name="partner_id"/>
                            <field name="name"/>
                            <field name="customer_sku"/>
                            <field name="agreed_price"/>
                        </tree>
                    </field>
                </page>

            </field>
            </record>



            <record id="channel_adv_product_template_search_view" model="ir.ui.view">
            <field name="name">Channel advisor Product Template Search View</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view" />
            <field name="arch" type="xml">
                    <field name="categ_id" position="after">
                        <field name="product_customer_sku"/>
                    </field>
            </field>
            </record>

    </data>

</odoo>
