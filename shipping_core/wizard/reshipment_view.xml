<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <act_window name="Reship" id="act_picking_reship" res_model="picking.reshipment" view_mode="form" target="new" />

    <record id="view_stock_return_picking_form" model="ir.ui.view">
        <field name="name">Reshipment lines</field>
        <field name="model">picking.reshipment</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="reshipment_moves" nolabel="1">
                        <tree editable="top" create="0">
                            <field name="product_id" options="{'no_create': True, 'no_open': True}" force_save="1" />
                            <field name="quantity" />
                            <field name="uom_id" readonly="1" groups="uom.group_uom" />
                        </tree>
                    </field>
                </group>

                <footer>
                    <button name="create_reshipment" string="Create Reshipment" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
