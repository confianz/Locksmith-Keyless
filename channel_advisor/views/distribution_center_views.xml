<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ca_distribution_center_view_tree" model="ir.ui.view">
        <field name="name">ca.distribution.center.tree</field>
        <field name="model">ca.distribution.center</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0">
                <field name="name" />
                <field name="code" />
                <field name="type" />
            </tree>
        </field>
    </record>


    <record id="ca_distribution_center_view_from" model="ir.ui.view">
        <field name="name">ca.distribution.center.form</field>
        <field name="model">ca.distribution.center</field>
        <field name="arch" type="xml">
            <form create="0">
                <sheet>
                    <div class="oe_title">
                        <h2>
                            <field name="name" default_focus="1" required="1" />
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="res_id" string="ID" readonly="1" />
                            <field name="code" readonly="1" />
                        </group>
                        <group>
                            <field name="type" readonly="1" />
                            <field name="warehouse_id"  />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="ca_distribution_center_action" model="ir.actions.act_window">
        <field name="name">Distribution Centers</field>
        <field name="res_model">ca.distribution.center</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="ca_distribution_center_view_tree" />
    </record>


    <menuitem id="ca_distribution_center_menu" action="ca_distribution_center_action" parent="menu_chnl_adv" sequence="7" />

</odoo>
