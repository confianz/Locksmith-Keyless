<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_edi_config_tree" model="ir.ui.view">
            <field name="name">edi.config.tree</field>
            <field name="model">edi.config</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Edi Configuration" >
                    <field name="name"/>
                    <field name="username"/>
                    <field name="password" password="True"/>
                </tree>
            </field>
        </record>



        <record id="view_edi_config_from" model="ir.ui.view">
            <field name="name">edi.config.form</field>
            <field name="model">edi.config</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <form string="Edi Configuration" >
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="partner_id" required="1"/>
                                <field name="file_path_in" required="1"/>
                                <field name="file_path_out" required="1"/>


                            </group>
                            <group>

                                <field name="username" required="1"/>
                                <field name="password" required="1" password="True"/>

                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <record id="action_edi_config" model="ir.actions.act_window">
            <field name="name">EDI Configuration </field>
            <field name="res_model">edi.config</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <!--<field name="search_view_id" ref="view_sales_order_filter"/>TODO -->
            <field name="help" type="html">
                <p>
                    All the edi configurations are saved here
                </p>
            </field>
        </record>








    </data>
</odoo>
