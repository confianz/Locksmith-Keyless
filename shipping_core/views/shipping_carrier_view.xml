<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="carrier_deatils_form" model="ir.ui.view">
        <field name="name">Shipping Carrier</field>
        <field name="model">shipping.carrier</field>
        <field name="arch" type="xml">
            <form string="Shipping Carrier Settings">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="model_name" />
                        </group>
                        <group>
                            <field name='active' />
                            <field name="company_id" />
                        </group>
                    </group>
                    <separator string="Shipping Dropoff Types" />
                    <group>
                        <field name="dropoff_type_ids" nolabel="1">
                            <tree string="Shipping Dropoff Type" editable='bottom'>
                                <field name="name" />
                                <field name="code" />
                                <field name="is_default" />
                            </tree>
                        </field>
                    </group>
                    <separator string="Shipping Packaging Types" />
                    <group>
                        <field name="packaging_type_ids" nolabel="1">
                            <tree string="Shipping Packaging Type" editable='bottom'>
                                <field name="name" />
                                <field name="code" />
                                <field name="is_default" />
                            </tree>
                        </field>
                    </group>
                    <separator string="Shipping Packaging Details" />
                    <group>
                        <field name="package_detail_ids" nolabel="1">
                            <tree string="Shipping Packaging Details" editable='bottom'>
                                <field name="name" />
                                <field name="code" />
                                <field name="is_default" />
                            </tree>
                        </field>
                    </group>
                    <separator string="Physical Packaging Details" />
                    <group>
                        <field name="physical_packaging_ids" nolabel="1">
                            <tree string="Physical Packaging Details" editable='bottom'>
                                <field name="name" />
                                <field name="code" />
                                <field name="is_default" />
                            </tree>
                        </field>
                    </group>
                    <separator string="Freight Class" />
                    <group>
                        <field name="freight_ids" nolabel="1">
                            <tree string="Freight Class" editable='bottom'>
                                <field name="name" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="carrier_deatils_tree" model="ir.ui.view">
        <field name="name">Shipping Carrier</field>
        <field name="model">shipping.carrier</field>
        <field name="arch" type="xml">
            <tree string="Shipping Carrier Settings">
                <field name="name" />
                <field name="model_name" />
            </tree>
        </field>
    </record>


    <record id="action_carrier_deatils" model="ir.actions.act_window">
        <field name="name">Shipping Carrier</field>
        <field name="res_model">shipping.carrier</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to configure New Carrier.
            </p>
        </field>
    </record>

</odoo>
