<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="update_queue_view_tree" model="ir.ui.view">
        <field name="name">update.queue.tree</field>
        <field name="model">ca.update.queue</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id" />
                <field name="update_type" />
            </tree>
        </field>
    </record>


    <record id="update_queue_view_from" model="ir.ui.view">
        <field name="name">update.queue.form</field>
        <field name="model">ca.update.queue</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" required="1" />
                            <field name="update_type" required="1" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="update_queue_action" model="ir.actions.act_window">
        <field name="name">Update Queue</field>
        <field name="res_model">ca.update.queue</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="update_queue_view_tree" />
    </record>


    <menuitem id="update_queue_menu" action="update_queue_action" parent="menu_chnl_adv" sequence="20" />

</odoo>
