<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ca_account_view_tree" model="ir.ui.view">
        <field name="name">ca.account.tree</field>
        <field name="model">ca.account</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0">
                <field name="account_id" />
                <field name="name" />
                <field name="company_name" />
            </tree>
        </field>
    </record>


    <record id="ca_account_view_from" model="ir.ui.view">
        <field name="name">ca.account.form</field>
        <field name="model">ca.account</field>
        <field name="arch" type="xml">
            <form create="0" edit="0">
                <sheet>
                    <div class="oe_title">
                        <h2>
                            <field name="name" default_focus="1" required="1" />
                        </h2>
                        <div class="o_row">
                            <field name="company_name" />
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="account_id" />
                        </group>
                        <group>
                            <field name="default_dist_center_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="ca_account_action" model="ir.actions.act_window">
        <field name="name">Accounts</field>
        <field name="res_model">ca.account</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="ca_account_view_tree" />
    </record>


    <menuitem id="ca_account_menu" action="ca_account_action" parent="menu_chnl_adv" sequence="6" />

</odoo>
