<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="shipstation_connector_form" model="ir.ui.view">
        <field name="name">shipstation.connector.form</field>
        <field name="model">shipstation.connector</field>
        <field name="arch" type="xml">
            <form string="Shipstation Settings">
                <group>
                    <group>
                        <field name="name" />
                        <field name="shipstation_account_id" />
                        <field name="shipstation_store_id" />
                    </group>
                    <group>
                        <field name="environment" />

                        <field name="company_id" />
                    </group>
                </group>

            </form>
        </field>
    </record>


    <record id="shipstation_connector_tree" model="ir.ui.view">
        <field name="name">shipstation.connector.tree</field>
        <field name="model">shipstation.connector</field>
        <field name="arch" type="xml">
            <tree string="Shipstation Settings">
                <field name="shipstation_account_id" />
                <field name="shipstation_store_id" />
                <field name="company_id" />
            </tree>
        </field>
    </record>


    <record id="action_shipstation_connector" model="ir.actions.act_window">
        <field name="name">Shipstation Connector</field>
        <field name="res_model">shipstation.connector</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to configure Shipstation account.
            </p>
        </field>
    </record>


    <menuitem id="menu_shipstation_setting" parent="shipping_core.menu_shipping_service"
        action="action_shipstation_connector" />

</odoo>
