<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ftp config form view   -->
    <record id="view_ftp_config_form" model="ir.ui.view">
        <field name="name">ftp.config.form</field>
        <field name="model">ftp.configuration</field>
        <field name="arch" type="xml">
            <form string="FTP Configuration">
                <sheet>
                 <div class="oe_button_box" name="button_box">
                            <button name="check_connection" type="object"
                                    class="oe_stat_button" icon="fa-archive" string="Check Connection">

                            </button>
                            <!--<button name="process_ftp" type="object"-->
                                    <!--class="oe_stat_button" icon="fa-archive" string="PROCESS">-->
                            <!--</button>-->
                            </div>

                    <group col="4" string="FTP Configuration">
                        <group colspan="2">
                            <field name="name" />
                            <field name="host" />
                            <field name="protocol" />
                        </group>
                        <group colspan="2">
                            <field name="username" />
                            <field name="password" password="True" />
                        </group>
                         <group colspan="2">
                            <field name="file_location" />
                            <field name="dest_file_location" />
                            <!--<field name="file_type" />-->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <!-- TREE VIEW Configuration-->

    <record model="ir.ui.view" id="ftp_config_tree">
        <field name="name">ftp.config.tree</field>
        <field name="model">ftp.configuration</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="FTP Configuration">
                <field name="name" />
            </tree>
        </field>
    </record>



    <!-- ACTION Configuration-->

    <record id="action_ftp_config" model="ir.actions.act_window" >
        <field name="name">FTP Configuration</field>
        <field name="res_model">ftp.configuration</field>
       <field name="view_mode">tree,form</field>
         <field name="view_id" ref="ftp_config_tree" />
    </record>



    <!---Ftp configuration-->


    <menuitem id="menu_ftp_config" name="FTP Configuration" parent="channel_advisor.menu_chnl_adv" action="action_ftp_config" />


</odoo>
