<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_customer_sku_view" model="ir.ui.view">
            <field name="name">Product Template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <page name='general_information' position="inside">
                    <separator string="Customer Reference" />
                    <field name="product_customer_sku" invisible="1" />
                    <field name='customer_product_value_ids'>
                        <tree editable="bottom">
                            <field name="product_id" invisible="1" />
                            <field name="partner_id" />
                            <field name="name" />
                            <field name="customer_sku" />
                            <field name="agreed_price" />
                        </tree>
                    </field>
                </page>
                <notebook position="inside">
                    <page string="Channel Advisor">
                        <group>
                            <group>
                                <field name="ca_product_id" string="ID" readonly="1" />
                                <field name="ca_profile_id" string="Profile ID" readonly="1" />
                            </group>
                            <group>
                                <field name="ca_product_type" readonly="1" />
                                <field name="ca_parent_product_id" invisible="1" />
                                <field name="ca_parent_id" string="Parent Product" readonly="1"
                                    attrs="{'invisible': [('ca_product_type', '!=', 'Child')]}" />
                            </group>
                            <group>
                                <field name="ca_brand" readonly="1" />
                                <field name="ca_mpn" readonly="1" />
                            </group>
                            <group>
                                <field name="is_ca_master_product" attrs="{'invisible': [('ca_master_product_id', '!=', False)]}" />
                                <field name="ca_master_product_id" domain="[('is_ca_master_product', '=', True)]"
                                    attrs="{'invisible': ['|', ('is_ca_master_product', '=', True), ('ca_product_type', 'in', ['Parent', 'Bundle'])]}" />
                            </group>
                        </group>
                        <group string="Components" attrs="{'invisible': [('is_ca_master_product', '=', False)]}">
                            <field name="ca_mapped_product_ids" widget="many2many" nolabel="1"
                                domain="[('ca_product_type', 'in', ['Item', 'Child']), ('is_ca_master_product', '=', False), ('ca_master_product_id', '=', False)]">
                                <tree>
                                    <field name="default_code" string="SKU" />
                                    <field name="name" />
                                    <field name="ca_product_type" />
                                    <field name="ca_product_id" string="ID" />
                                    <field name="ca_profile_id" string="Profile ID" />
                                </tree>
                            </field>
                        </group>

                        <!-- <group string="Components" attrs="{'invisible': [('ca_product_type', '!=', 'Bundle')]}">
                            <field name="ca_bundle_product_ids" widget="many2many" nolabel="1"
                                domain="[('ca_product_type', 'in', ['Item', 'Child'])]">
                                <tree>
                                    <field name="default_code" string="SKU" />
                                    <field name="name" />
                                    <field name="ca_product_type" />
                                    <field name="ca_product_id" string="ID" />
                                    <field name="ca_profile_id" string="Profile ID" />
                                    <field name="qty_available" />
                                </tree>
                            </field>
                        </group>
                        <group string="Bundles"
                            attrs="{'invisible': [('ca_product_type', 'in', ['Bundle', 'Parent'])]}">
                            <field name="ca_bundle_ids" widget="many2many" nolabel="1"
                                domain="[('ca_product_type', '=', 'Bundle')]">
                                <tree>
                                    <field name="default_code" string="SKU" />
                                    <field name="name" />
                                    <field name="ca_product_type" />
                                    <field name="ca_product_id" string="ID" />
                                    <field name="ca_profile_id" string="Profile ID" />
                                </tree>
                            </field>
                        </group> -->
                    </page>
                </notebook>
            </field>
        </record>



        <record id="channel_adv_product_template_search_view" model="ir.ui.view">
            <field name="name">Channel advisor Product Template Search View</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view" />
            <field name="arch" type="xml">
                <field name="categ_id" position="after">
                    <field name="product_customer_sku" />
                </field>
            </field>
        </record>

    </data>

</odoo>
